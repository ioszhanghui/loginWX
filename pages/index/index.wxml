<image src="../../images/LOGO@2x.png" class="LOGO"></image>
<view class='phoneInput'>
    <image src='../../images/手机图标@2x.png' class='phoneLOGO'></image>
    <view class='middleLine'></view>
    <input class='phoneField' type='number' placeholder='请输入手机号' maxlength='11' placeholder-class="placeHolder" value='' bindinput='phoneNumberInput'></input>
</view>
<view class='codeInput'>
    <image src='../../images/验证码图标@2x.png' class='phoneLOGO'></image>
    <view class='middleLine'></view>
    <input class='codeField' type='number' placeholder='请输入验证码' maxlength='6' value="" placeholder-class="placeHolder" bindinput='codeNumberInput'></input>
    <view class='rightLine'></view>
    <view class='sendCode' bindtap='getCode'>{{text}}</view>
</view>
<navigator url='../scanCode/scanCode'>
<view class='logInBtn' bindtap='loginAction'>登录</view>
</navigator>